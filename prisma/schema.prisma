generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  events    Event[]  @relation("UserEvents")
  tickets   Ticket[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id           String   @id @default(uuid())
  title        String
  description  String?
  date         DateTime
  location     String?
  totalTickets Int
  createdById  String
  createdBy    User     @relation("UserEvents", fields: [createdById], references: [id])
  tickets      Ticket[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Ticket {
  id         String       @id @default(uuid())
  ticketCode String       @unique
  qrCode     String?
  status     TicketStatus @default(RESERVED)
  userId     String
  eventId    String
  user       User         @relation(fields: [userId], references: [id])
  event      Event        @relation(fields: [eventId], references: [id])
  createdAt  DateTime     @default(now())
}

enum TicketStatus {
  RESERVED
  USED
  CANCELED
}
